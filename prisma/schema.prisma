generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ArticleCategories {
  id           String         @id @db.VarChar(50)
  name         String         @unique @db.Text
  FullArticles FullArticles[]
}

model SkinDiseases {
  id   String @id @db.VarChar(50)
  name String @unique @db.Text
}

model ArticleThumbnails {
  id           String         @id @db.VarChar(50)
  filename     String         @db.Text
  url          String         @unique @db.Text
  FullArticles FullArticles[]
}

model Articles {
  id           String         @id @db.VarChar(50)
  title        String         @db.Text
  body         String         @db.Text
  FullArticles FullArticles[]
}

model FullArticles {
  article     Articles          @relation(fields: [articleId], references: [id])
  articleId   String
  category    ArticleCategories @relation(fields: [categoryId], references: [id])
  categoryId  String
  thumbnail   ArticleThumbnails @relation(fields: [thumbnailId], references: [id])
  thumbnailId String
  assignedAt  DateTime          @default(now())

  @@id([articleId, categoryId, thumbnailId])
}
